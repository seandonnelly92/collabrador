<div class="body">

  <div class="container" style="height: 500px;">
    <div class="row">
      <div class="index-grid col-7">

          <% @pets.each do |pet| %>
            <div class="pet-profile-card">
              <img class="pet-img" src="<%= pet.dog_image %>" alt="Picture of pet">
              <div class="pet-card-content">
                <div class="pet-content-titles">
                  <h5 class="pc-title"><%= @owner.first_name %> & <%= pet.name %></h5>
                  <p class="pc-title"><%= @owner.postcode %></p>
                </div>
                <div class="pet-desc">
                  <p class="pet-card-text">Description of the dog and all the wonderful things this dog is</p>
                </div>
              </div>
              <%# <button class="pet-card-btn"></button> %>
              <%= link_to 'Profile', pet_path(pet), class: "pet-card-btn" %>
              <img class="avatar" src="https://images.unsplash.com/photo-1599566150163-29194dcaad36?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NHx8YXZhdGFyfGVufDB8fDB8fHww" alt="your profile picture">
            </div>
          <% end %>
            <%# <%= render 'profile_card' %>


      </div>

      <div class="col-5">
        <div class="row mr-auto">
          <img src="https://blogcdn.zeemaps.com/blog/wp-content/uploads/2020/01/Radius-map-2.png" class="map-eg-img">
        </div>
      </div>

    </div>
  </div>

  <div class="container mt-5 testim-bg">
    <div class="row d-flex flex-grid justify-content-between">
      <div class="col-3">

        <ul class="testim-list">
          <li><h2>Meet Fellow Dog Lovers</h2></li>
          <li><i class="fa-solid fa-paw"></i></li>
          <li><p>Find likeminded dog owners near you at our park events</p></li>
        </ul>

      </div>

      <div class="col-3">
        <ul class="testim-list">
          <li><h2>Shared Value</h2></li>
          <li><i class="fa-solid fa-coins"></i></li>
          <li><p>An ecosystem of free support</p></li>
        </ul>
      </div>

      <div class="col-3">
        <ul class="testim-list">
          <li><h2>Helper Community</h2></li>
          <li><i class="fa-solid fa-house"></i></li>
          <li><p>Find and foster a community of support in your area</p></li>
        </ul>
      </div>

    </div>
  </div>

</div>
