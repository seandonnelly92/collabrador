<!DOCTYPE html>
<html>
  <head>
    <title>Collabrador</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link href="https://api.mapbox.com/mapbox-gl-js/v2.11.0/mapbox-gl.css" rel="stylesheet">
    <link rel="stylesheet" href="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v5.0.0/mapbox-gl-geocoder.css" type="text/css">
    <%# <link rel="stylesheet" href="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v5.0.0/mapbox-gl-geocoder.css" type="text/css"> %>
    <%# <script src=“https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v5.0.0/mapbox-gl-geocoder.min.js”></script> %>

  </head>

  <body>

    <div data-controller="modals"> <!-- Note: modals-controller sits in seperate div to cover the navbar and the modals itself -->
      <div class="navbar navbar-light bg-light justify-content-between sticky-top mb-2 p-3">
        <div class="mr-auto">
          <h3 class="navbar-brand" id="logo-link"><%= link_to root_path do %>
            <i class="fa-solid fa-paw"></i> Collabrador
          <% end %>
          </h3>
        </div>
        <ul class="list-text" id="navbar-menu">
          <li class="list-item"> <%= link_to root_path do %></li>
            <i class="fa-solid fa-magnifying-glass"></i> Explore
          <% end %>
          <li class="list-item"> <%= link_to root_path do %></li>
            <i class="fa-regular fa-calendar-check"></i> My Appointments
          <% end %>
          <li class="list-item"> <%= link_to user_profile_path do %></li>
            <i class="fa-solid fa-user"></i> My Profile
          <% end %>
        </ul>
        <div class="">
          <ul class="list-text" id="navbar-account">
            <% unless current_user %>
              <li class="btn btn-primary list-item" data-action="click->modals#openSignin">Login</li>
              <li class="btn btn-light list-item" data-action="click->modals#openSignup">Sign-up</li>
            <% else %>
              <li class="btn btn-light list-item"><%= link_to 'Sign out', destroy_user_session_path, data: { turbo_method: :delete }, id: "signout-link" %></li>
            <% end %>
          </ul>
        </div>
      </div>


      <!-- Modal - Sign-up -->
      <div class="modal-custom" data-modals-target="signup">
        <div class="inner">
          <div class="modal-head">
            <h1>Sign-up</h1>
            <span><i class="fa-solid fa-circle-xmark" data-modals-target="closeBtn" data-action="click->modals#closeSignup"></i></span>
          </div>
          <h2>Join other collabradors in your neighborhood!</h2>
          <%= render "devise/registrations/signup_form" %>
        </div>
      </div>

      <!-- Modal - Sign-in -->
      <div class="modal-custom" data-modals-target="signin">
        <div class="inner">
          <div class="modal-head">
            <h1>Login</h1>
            <span><i class="fa-solid fa-circle-xmark" data-modals-target="closeBtn" data-action="click->modals#closeSignin"></i></span>
          </div>
          <h2>Sign in to continue</h2>
          <%= render "devise/sessions/signin_form" %>
        </div>
      </div>

    <%= yield %>
  </body>
</html>
